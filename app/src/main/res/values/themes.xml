<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ✅ Light Theme -->
    <style name="Theme.FunFactsApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- ✅ Dark Theme -->
    <style name="Theme.FunFactsApp.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>


    <!-- ✅ Splash Screen Theme (Prevents Default Android Splash) -->
    <style name="Theme.FunFactsApp.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item> <!-- ✅ Use custom drawable -->
    </style>
</resources>
